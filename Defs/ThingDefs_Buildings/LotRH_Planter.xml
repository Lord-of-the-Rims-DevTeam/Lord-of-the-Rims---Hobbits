    <ThingDef ParentName="LotRH_BuildingBase">
    <defName>LotRH_PlantPotPartyTree</defName>
    <label>party tree grow spot</label>
    <thingClass>Hobbits.Building_PartyTreeGrower</thingClass>
    <graphicData>
      <texPath>Things/Building/Misc/PartySpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <tradeTags/>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.20</fillPercent>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Mass>2</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <stuffCategories/>
    <description>Plant a unique party tree, which can be used as a gathering spot for celebrations, weddings, and even birthday parties!</description>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
    </comps>
    <fertility>1.0</fertility>
    <designationCategory>Misc</designationCategory>
    <designationHotKey>Misc9</designationHotKey>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>	
	<constructEffect>Sow</constructEffect>
    <building>
      <defaultPlantToGrow>LotRH_PlantPartyTree</defaultPlantToGrow>
	  <sowTag>LotR_PartyTree</sowTag>
    </building>
    <rotatable>false</rotatable>
	<placeWorkers>
	  <li>Hobbits.PlaceWorker_Unique</li>
	</placeWorkers>
  </ThingDef>

