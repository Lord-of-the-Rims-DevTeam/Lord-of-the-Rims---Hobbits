<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="LotRH_RoughPlantBase">
    <defName>LotRH_PipeweedLeaves</defName>
    <label>pipe-weed leaves</label>
    <description>Also known as Halflings' Leaf, this enjoyable tabbaco-like plant be ground up and smoked in pipes.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Pipeweed/Leaves/PipeweedLeaves</texPath>
    </graphicData>
    <statBases>
      <MarketValue>0.7</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>30</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>

	<!-- =============== BASES =============== -->

    <ThingDef Name="LotRH_ResourceBase" Abstract="True">
      <thingClass>ThingWithComps</thingClass>
      <category>Item</category>
      <resourceReadoutPriority>Middle</resourceReadoutPriority>
      <useHitPoints>true</useHitPoints>
      <selectable>true</selectable>
      <altitudeLayer>Item</altitudeLayer>
      <stackLimit>75</stackLimit>
  		<statBases>
  			<Beauty>-4</Beauty>
  		</statBases>
  		<comps>
  			<li Class="CompProperties_Forbiddable"/>
  		</comps>
  		<alwaysHaulable>true</alwaysHaulable>
  		<drawGUIOverlay>true</drawGUIOverlay>
  		<rotatable>false</rotatable>
  		<pathCost>15</pathCost>
  	</ThingDef>

    <ThingDef Abstract="True" Name="LotRH_OrganicProductBase" ParentName="LotRH_ResourceBase">
      <graphicData>
        <graphicClass>Graphic_Single</graphicClass>
      </graphicData>
      <statBases>
        <MaxHitPoints>60</MaxHitPoints>
        <Flammability>1.0</Flammability>
        <DeteriorationRate>6</DeteriorationRate>
  			<Mass>0.03</Mass>
      </statBases>
      <tickerType>Rare</tickerType>
    </ThingDef>

    <ThingDef ParentName="LotRH_OrganicProductBase" Name="LotRH_RoughPlantBase" Abstract="True">
      <ingestible>
        <foodType>Plant</foodType>
        <preferability>DesperateOnly</preferability>
        <nutrition>0.05</nutrition>
      </ingestible>
    </ThingDef>


</Defs>
