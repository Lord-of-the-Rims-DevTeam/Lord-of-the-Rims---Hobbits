      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>1500</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>LotR_HobbitApparel</li>
      </tags>
      <defaultOutfitTags>
        <li>LotRH_HobbitApparel</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <recipeMaker>
      <researchPrerequisite>LotRH_ApparelOne</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
